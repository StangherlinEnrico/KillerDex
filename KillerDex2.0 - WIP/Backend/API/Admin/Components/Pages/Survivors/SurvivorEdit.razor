@page "/admin/survivors/new"
@page "/admin/survivors/{Id:guid}"
@attribute [Authorize]
@inject ISurvivorService SurvivorService
@inject IChapterService ChapterService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>@(_isNew ? "New Survivor" : "Edit Survivor") - KillerDex Admin</PageTitle>

<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/admin/survivors" />
    <MudText Typo="Typo.h4">@(_isNew ? "New Survivor" : $"Edit {_model.Name}")</MudText>
</MudStack>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudForm @ref="_form" @bind-IsValid="_isValid">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Basic Information</MudText>

                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Name" Label="Name" Required="true"
                                          RequiredError="Name is required" MaxLength="100" />
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Overview" Label="Overview" Lines="3" MaxLength="2000" />
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Backstory" Label="Backstory" Lines="5" MaxLength="8000" />
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Media & Chapter</MudText>

                    <MudTextField @bind-Value="_model.ImageUrl" Label="Image URL" MaxLength="500" Class="mb-4" />

                    @if (!string.IsNullOrEmpty(_model.ImageUrl))
                    {
                        <MudImage Src="@_model.ImageUrl" Alt="Preview" Class="mb-4" Style="max-width: 100%; max-height: 200px;" ObjectFit="ObjectFit.Contain" />
                    }

                    <MudSelect T="Guid?" @bind-Value="_model.ChapterId" Label="Chapter" Clearable="true" Class="mb-4">
                        @foreach (var chapter in _chapters)
                        {
                            <MudSelectItem T="Guid?" Value="@chapter.Id">@chapter.Name</MudSelectItem>
                        }
                    </MudSelect>

                    <MudTextField @bind-Value="_model.GameVersion" Label="Game Version" MaxLength="20" />
                </MudPaper>

                <MudPaper Class="pa-4 mt-4" Elevation="2">
                    <MudStack>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                                   Disabled="@(!_isValid || _isSaving)" OnClick="Save">
                            @if (_isSaving)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Saving...</MudText>
                            }
                            else
                            {
                                <MudText>@(_isNew ? "Create Survivor" : "Save Changes")</MudText>
                            }
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true" Href="/admin/survivors">
                            Cancel
                        </MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private MudForm? _form;
    private bool _isValid;
    private bool _isNew => !Id.HasValue;
    private bool _isLoading = true;
    private bool _isSaving;
    private List<ChapterSummaryDto> _chapters = new();

    private SurvivorFormModel _model = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _chapters = (await ChapterService.GetAllAsync()).ToList();

            if (Id.HasValue)
            {
                var survivor = await SurvivorService.GetByIdAsync(Id.Value);
                if (survivor != null)
                {
                    _model = new SurvivorFormModel
                    {
                        Name = survivor.Name,
                        Overview = survivor.Overview,
                        Backstory = survivor.Backstory,
                        ImageUrl = survivor.ImageUrl,
                        GameVersion = survivor.GameVersion,
                        ChapterId = survivor.Chapter?.Id
                    };
                }
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Save()
    {
        if (_form == null) return;
        await _form.Validate();
        if (!_isValid) return;

        _isSaving = true;
        try
        {
            if (_isNew)
            {
                var request = new CreateSurvivorRequest(
                    _model.Name,
                    _model.Overview,
                    _model.Backstory,
                    _model.ImageUrl,
                    _model.GameVersion,
                    _model.ChapterId
                );

                await SurvivorService.CreateAsync(request);
                Snackbar.Add("Survivor created successfully", Severity.Success);
            }
            else
            {
                var request = new UpdateSurvivorRequest(
                    _model.Name,
                    _model.Overview,
                    _model.Backstory,
                    _model.ImageUrl,
                    _model.GameVersion,
                    _model.ChapterId
                );

                await SurvivorService.UpdateAsync(Id!.Value, request);
                Snackbar.Add("Survivor updated successfully", Severity.Success);
            }

            Navigation.NavigateTo("/admin/survivors");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private class SurvivorFormModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Overview { get; set; }
        public string? Backstory { get; set; }
        public string? ImageUrl { get; set; }
        public string? GameVersion { get; set; }
        public Guid? ChapterId { get; set; }
    }
}
