@page "/admin/perks/new"
@page "/admin/perks/{Id:guid}"
@attribute [Authorize]
@inject IPerkService PerkService
@inject IKillerService KillerService
@inject ISurvivorService SurvivorService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>@(_isNew ? "New Perk" : "Edit Perk") - KillerDex Admin</PageTitle>

<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/admin/perks" />
    <MudText Typo="Typo.h4">@(_isNew ? "New Perk" : $"Edit {_model.Name}")</MudText>
</MudStack>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudForm @ref="_form" @bind-IsValid="_isValid">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Perk Information</MudText>

                    <MudGrid>
                        <MudItem xs="12" md="8">
                            <MudTextField @bind-Value="_model.Name" Label="Name" Required="true"
                                          RequiredError="Name is required" MaxLength="200" />
                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudSelect @bind-Value="_model.Role" Label="Role" Required="true" Disabled="@(!_isNew)">
                                @foreach (var role in Enum.GetValues<Role>())
                                {
                                    <MudSelectItem Value="@role.ToString()">@role</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Description" Label="Description" Lines="5" MaxLength="4000" />
                        </MudItem>
                    </MudGrid>
                </MudPaper>

                <MudPaper Class="pa-4 mt-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Owner</MudText>

                    @if (_model.Role == "Killer")
                    {
                        <MudSelect T="Guid?" @bind-Value="_model.KillerId" Label="Killer" Clearable="true">
                            @foreach (var killer in _killers)
                            {
                                <MudSelectItem T="Guid?" Value="@killer.Id">@killer.Name</MudSelectItem>
                            }
                        </MudSelect>
                    }
                    else if (_model.Role == "Survivor")
                    {
                        <MudSelect T="Guid?" @bind-Value="_model.SurvivorId" Label="Survivor" Clearable="true">
                            @foreach (var survivor in _survivors)
                            {
                                <MudSelectItem T="Guid?" Value="@survivor.Id">@survivor.Name</MudSelectItem>
                            }
                        </MudSelect>
                    }
                    else
                    {
                        <MudText Color="Color.Secondary">Universal perks don't have a specific owner.</MudText>
                    }
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Image & Version</MudText>

                    <MudTextField @bind-Value="_model.ImageUrl" Label="Image URL" MaxLength="500" Class="mb-4" />

                    @if (!string.IsNullOrEmpty(_model.ImageUrl))
                    {
                        <MudImage Src="@_model.ImageUrl" Alt="Preview" Class="mb-4" Style="max-width: 100%; max-height: 150px;" ObjectFit="ObjectFit.Contain" />
                    }

                    <MudTextField @bind-Value="_model.GameVersion" Label="Game Version" MaxLength="20" />
                </MudPaper>

                <MudPaper Class="pa-4 mt-4" Elevation="2">
                    <MudStack>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                                   Disabled="@(!_isValid || _isSaving)" OnClick="Save">
                            @if (_isSaving)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Saving...</MudText>
                            }
                            else
                            {
                                <MudText>@(_isNew ? "Create Perk" : "Save Changes")</MudText>
                            }
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true" Href="/admin/perks">
                            Cancel
                        </MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private MudForm? _form;
    private bool _isValid;
    private bool _isNew => !Id.HasValue;
    private bool _isLoading = true;
    private bool _isSaving;
    private List<KillerSummaryDto> _killers = new();
    private List<SurvivorSummaryDto> _survivors = new();

    private PerkFormModel _model = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _killers = (await KillerService.GetAllAsync()).ToList();
            _survivors = (await SurvivorService.GetAllAsync()).ToList();

            if (Id.HasValue)
            {
                var perk = await PerkService.GetByIdAsync(Id.Value);
                if (perk != null)
                {
                    _model = new PerkFormModel
                    {
                        Name = perk.Name,
                        Description = perk.Description,
                        Role = perk.Role,
                        ImageUrl = perk.ImageUrl,
                        GameVersion = perk.GameVersion,
                        KillerId = perk.Owner?.Type == "Killer" ? perk.Owner.Id : null,
                        SurvivorId = perk.Owner?.Type == "Survivor" ? perk.Owner.Id : null
                    };
                }
            }
            else
            {
                _model = new PerkFormModel { Role = "Survivor" };
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Save()
    {
        if (_form == null) return;
        await _form.Validate();
        if (!_isValid) return;

        _isSaving = true;
        try
        {
            if (_isNew)
            {
                var request = new CreatePerkRequest(
                    _model.Name,
                    _model.Description,
                    _model.Role,
                    _model.ImageUrl,
                    _model.GameVersion,
                    _model.KillerId,
                    _model.SurvivorId
                );

                await PerkService.CreateAsync(request);
                Snackbar.Add("Perk created successfully", Severity.Success);
            }
            else
            {
                var request = new UpdatePerkRequest(
                    _model.Name,
                    _model.Description,
                    _model.ImageUrl,
                    _model.GameVersion,
                    _model.KillerId,
                    _model.SurvivorId
                );

                await PerkService.UpdateAsync(Id!.Value, request);
                Snackbar.Add("Perk updated successfully", Severity.Success);
            }

            Navigation.NavigateTo("/admin/perks");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private class PerkFormModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public string Role { get; set; } = string.Empty;
        public string? ImageUrl { get; set; }
        public string? GameVersion { get; set; }
        public Guid? KillerId { get; set; }
        public Guid? SurvivorId { get; set; }
    }
}
