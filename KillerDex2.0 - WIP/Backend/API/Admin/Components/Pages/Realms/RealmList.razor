@page "/admin/realms"
@attribute [Authorize]
@inject IRealmService RealmService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>Realms - KillerDex Admin</PageTitle>

<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
    <MudText Typo="Typo.h4">Realms</MudText>
    <MudSpacer />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Href="/admin/realms/new">
        Add Realm
    </MudButton>
</MudStack>

<MudTable Items="@_filteredRealms" Dense="true" Hover="true" Striped="true" Loading="@_isLoading" LoadingProgressColor="Color.Primary">
    <ToolBarContent>
        <MudTextField @bind-Value="_searchString" Placeholder="Search by name..." Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                      Immediate="true" DebounceInterval="300" OnDebounceIntervalElapsed="FilterRealms" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Image</MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<RealmSummaryDto, object>(x => x.Name)">Name</MudTableSortLabel></MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Image">
            @if (!string.IsNullOrEmpty(context.ImageUrl))
            {
                <MudAvatar Size="Size.Medium" Square="true">
                    <MudImage Src="@context.ImageUrl" Alt="@context.Name" />
                </MudAvatar>
            }
            else
            {
                <MudAvatar Color="Color.Dark" Size="Size.Medium" Square="true">@context.Name[0]</MudAvatar>
            }
        </MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Actions">
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small"
                           Href="@($"/admin/realms/{context.Id}")" />
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                           OnClick="@(() => DeleteRealm(context))" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
    <NoRecordsContent>
        <MudText>No realms found.</MudText>
    </NoRecordsContent>
</MudTable>

@code {
    private List<RealmSummaryDto> _realms = new();
    private IEnumerable<RealmSummaryDto> _filteredRealms = Enumerable.Empty<RealmSummaryDto>();
    private string _searchString = string.Empty;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadRealms();
    }

    private async Task LoadRealms()
    {
        _isLoading = true;
        try
        {
            _realms = (await RealmService.GetAllAsync()).ToList();
            FilterRealms();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void FilterRealms()
    {
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredRealms = _realms;
        }
        else
        {
            _filteredRealms = _realms.Where(r =>
                r.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase));
        }
    }

    private async Task DeleteRealm(RealmSummaryDto realm)
    {
        var result = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete '{realm.Name}'? All maps in this realm will also be deleted.",
            yesText: "Delete",
            cancelText: "Cancel");

        if (result == true)
        {
            var success = await RealmService.DeleteAsync(realm.Id);
            if (success)
            {
                Snackbar.Add($"'{realm.Name}' deleted successfully", Severity.Success);
                await LoadRealms();
            }
            else
            {
                Snackbar.Add("Failed to delete realm", Severity.Error);
            }
        }
    }
}
