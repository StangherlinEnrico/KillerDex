@page "/admin/offerings/new"
@page "/admin/offerings/{Id:guid}"
@attribute [Authorize]
@inject IOfferingService OfferingService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>@(_isNew ? "New Offering" : "Edit Offering") - KillerDex Admin</PageTitle>

<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/admin/offerings" />
    <MudText Typo="Typo.h4">@(_isNew ? "New Offering" : $"Edit {_model.Name}")</MudText>
</MudStack>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudForm @ref="_form" @bind-IsValid="_isValid">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Offering Information</MudText>

                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudTextField @bind-Value="_model.Name" Label="Name" Required="true"
                                          RequiredError="Name is required" MaxLength="200" />
                        </MudItem>
                        <MudItem xs="12" md="3">
                            <MudSelect @bind-Value="_model.Rarity" Label="Rarity" Required="true">
                                @foreach (var rarity in Enum.GetValues<Rarity>())
                                {
                                    <MudSelectItem Value="@rarity.ToString()">@rarity</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12" md="3">
                            <MudSelect @bind-Value="_model.Role" Label="Role" Required="true">
                                @foreach (var role in Enum.GetValues<Role>())
                                {
                                    <MudSelectItem Value="@role.ToString()">@role</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Description" Label="Description" Lines="5" MaxLength="4000" />
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Image & Version</MudText>

                    <MudTextField @bind-Value="_model.ImageUrl" Label="Image URL" MaxLength="500" Class="mb-4" />

                    @if (!string.IsNullOrEmpty(_model.ImageUrl))
                    {
                        <MudImage Src="@_model.ImageUrl" Alt="Preview" Class="mb-4" Style="max-width: 100%; max-height: 150px;" ObjectFit="ObjectFit.Contain" />
                    }

                    <MudTextField @bind-Value="_model.GameVersion" Label="Game Version" MaxLength="20" />
                </MudPaper>

                <MudPaper Class="pa-4 mt-4" Elevation="2">
                    <MudStack>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                                   Disabled="@(!_isValid || _isSaving)" OnClick="Save">
                            @if (_isSaving)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Saving...</MudText>
                            }
                            else
                            {
                                <MudText>@(_isNew ? "Create Offering" : "Save Changes")</MudText>
                            }
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true" Href="/admin/offerings">
                            Cancel
                        </MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private MudForm? _form;
    private bool _isValid;
    private bool _isNew => !Id.HasValue;
    private bool _isLoading = true;
    private bool _isSaving;

    private OfferingFormModel _model = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Id.HasValue)
            {
                var offering = await OfferingService.GetByIdAsync(Id.Value);
                if (offering != null)
                {
                    _model = new OfferingFormModel
                    {
                        Name = offering.Name,
                        Description = offering.Description,
                        Rarity = offering.Rarity,
                        Role = offering.Role,
                        ImageUrl = offering.ImageUrl,
                        GameVersion = offering.GameVersion
                    };
                }
            }
            else
            {
                _model = new OfferingFormModel
                {
                    Rarity = Rarity.Common.ToString(),
                    Role = Role.All.ToString()
                };
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Save()
    {
        if (_form == null) return;
        await _form.Validate();
        if (!_isValid) return;

        _isSaving = true;
        try
        {
            if (_isNew)
            {
                var request = new CreateOfferingRequest(
                    _model.Name,
                    _model.Description,
                    _model.Rarity,
                    _model.Role,
                    _model.ImageUrl,
                    _model.GameVersion
                );

                await OfferingService.CreateAsync(request);
                Snackbar.Add("Offering created successfully", Severity.Success);
            }
            else
            {
                var request = new UpdateOfferingRequest(
                    _model.Name,
                    _model.Description,
                    _model.Rarity,
                    _model.Role,
                    _model.ImageUrl,
                    _model.GameVersion
                );

                await OfferingService.UpdateAsync(Id!.Value, request);
                Snackbar.Add("Offering updated successfully", Severity.Success);
            }

            Navigation.NavigateTo("/admin/offerings");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private class OfferingFormModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public string Rarity { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string? ImageUrl { get; set; }
        public string? GameVersion { get; set; }
    }
}
