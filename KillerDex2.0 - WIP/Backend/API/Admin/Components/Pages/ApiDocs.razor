@page "/docs"
@layout PublicLayout

<PageTitle>API Documentation - KillerDex</PageTitle>

<div class="docs-container">
    <MudPaper Elevation="4" Class="pa-8 docs-card">
        <MudStack Spacing="4">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Primary">KillerDex API</MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Class="mud-text-secondary">Public API Endpoints Documentation</MudText>

            <MudDivider Class="my-4" />

            <MudText Typo="Typo.h6" Color="Color.Secondary">Available Endpoints</MudText>
            <MudText Typo="Typo.body2" Class="mud-text-secondary mb-4">
                All endpoints are read-only and do not require authentication.
            </MudText>

            <MudAlert Severity="Severity.Info" Class="mb-4">
                This is a placeholder page. Full API documentation coming soon.
            </MudAlert>

            <MudExpansionPanels MultiExpansion="true">
                <MudExpansionPanel Text="Killers" Icon="@Icons.Material.Filled.Person">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/killers</code> - Get all killers</MudListItem>
                        <MudListItem><code>GET /api/killers/{"{id}"}</code> - Get killer by ID</MudListItem>
                        <MudListItem><code>GET /api/killers/{"{slug}"}</code> - Get killer by slug</MudListItem>
                        <MudListItem><code>GET /api/killers/{"{id}"}/perks</code> - Get killer's perks</MudListItem>
                        <MudListItem><code>GET /api/killers/{"{id}"}/addons</code> - Get killer's addons</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Survivors" Icon="@Icons.Material.Filled.People">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/survivors</code> - Get all survivors</MudListItem>
                        <MudListItem><code>GET /api/survivors/{"{id}"}</code> - Get survivor by ID</MudListItem>
                        <MudListItem><code>GET /api/survivors/{"{slug}"}</code> - Get survivor by slug</MudListItem>
                        <MudListItem><code>GET /api/survivors/{"{id}"}/perks</code> - Get survivor's perks</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Chapters" Icon="@Icons.Material.Filled.Book">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/chapters</code> - Get all chapters</MudListItem>
                        <MudListItem><code>GET /api/chapters/{"{id}"}</code> - Get chapter by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Perks" Icon="@Icons.Material.Filled.Star">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/perks</code> - Get all perks</MudListItem>
                        <MudListItem><code>GET /api/perks/{"{id}"}</code> - Get perk by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Addons" Icon="@Icons.Material.Filled.Extension">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/addons</code> - Get all addons</MudListItem>
                        <MudListItem><code>GET /api/addons/{"{id}"}</code> - Get addon by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Items" Icon="@Icons.Material.Filled.Inventory">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/items</code> - Get all items</MudListItem>
                        <MudListItem><code>GET /api/items/{"{id}"}</code> - Get item by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Offerings" Icon="@Icons.Material.Filled.CardGiftcard">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/offerings</code> - Get all offerings</MudListItem>
                        <MudListItem><code>GET /api/offerings/{"{id}"}</code> - Get offering by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Maps" Icon="@Icons.Material.Filled.Map">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/maps</code> - Get all maps</MudListItem>
                        <MudListItem><code>GET /api/maps/{"{id}"}</code> - Get map by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Status Effects" Icon="@Icons.Material.Filled.Bolt">
                    <MudList T="string" Dense="true">
                        <MudListItem><code>GET /api/statuseffects</code> - Get all status effects</MudListItem>
                        <MudListItem><code>GET /api/statuseffects/{"{id}"}</code> - Get status effect by ID</MudListItem>
                    </MudList>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </MudPaper>
</div>

<style>
    .docs-container {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        min-height: 100vh;
        padding: 40px 20px;
        box-sizing: border-box;
    }
    .docs-card {
        width: 100%;
        max-width: 800px;
    }
    code {
        background: var(--mud-palette-surface);
        padding: 2px 8px;
        border-radius: 4px;
        font-family: monospace;
        color: var(--mud-palette-primary);
    }
</style>
