@page "/admin/status-effects/new"
@page "/admin/status-effects/{Id:guid}"
@attribute [Authorize]
@inject IStatusEffectService StatusEffectService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>@(_isNew ? "New Status Effect" : "Edit Status Effect") - KillerDex Admin</PageTitle>

<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/admin/status-effects" />
    <MudText Typo="Typo.h4">@(_isNew ? "New Status Effect" : $"Edit {_model.Name}")</MudText>
</MudStack>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudForm @ref="_form" @bind-IsValid="_isValid">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Status Effect Information</MudText>

                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudTextField @bind-Value="_model.Name" Label="Name" Required="true"
                                          RequiredError="Name is required" MaxLength="200" />
                        </MudItem>
                        <MudItem xs="12" md="3">
                            <MudSelect @bind-Value="_model.Type" Label="Type" Required="true">
                                @foreach (var type in Enum.GetValues<StatusEffectType>())
                                {
                                    <MudSelectItem Value="@type.ToString()">@type</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12" md="3">
                            <MudSelect @bind-Value="_model.AppliesTo" Label="Applies To" Required="true">
                                @foreach (var role in Enum.GetValues<Role>())
                                {
                                    <MudSelectItem Value="@role.ToString()">@role</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField @bind-Value="_model.Description" Label="Description" Lines="5" MaxLength="4000" />
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6" Class="mb-4">Image & Version</MudText>

                    <MudTextField @bind-Value="_model.ImageUrl" Label="Image URL" MaxLength="500" Class="mb-4" />

                    @if (!string.IsNullOrEmpty(_model.ImageUrl))
                    {
                        <MudImage Src="@_model.ImageUrl" Alt="Preview" Class="mb-4" Style="max-width: 100%; max-height: 150px;" ObjectFit="ObjectFit.Contain" />
                    }

                    <MudTextField @bind-Value="_model.GameVersion" Label="Game Version" MaxLength="20" />
                </MudPaper>

                <MudPaper Class="pa-4 mt-4" Elevation="2">
                    <MudStack>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                                   Disabled="@(!_isValid || _isSaving)" OnClick="Save">
                            @if (_isSaving)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Saving...</MudText>
                            }
                            else
                            {
                                <MudText>@(_isNew ? "Create Status Effect" : "Save Changes")</MudText>
                            }
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true" Href="/admin/status-effects">
                            Cancel
                        </MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private MudForm? _form;
    private bool _isValid;
    private bool _isNew => !Id.HasValue;
    private bool _isLoading = true;
    private bool _isSaving;

    private StatusEffectFormModel _model = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Id.HasValue)
            {
                var effect = await StatusEffectService.GetByIdAsync(Id.Value);
                if (effect != null)
                {
                    _model = new StatusEffectFormModel
                    {
                        Name = effect.Name,
                        Description = effect.Description,
                        Type = effect.Type,
                        AppliesTo = effect.AppliesTo,
                        ImageUrl = effect.ImageUrl,
                        GameVersion = effect.GameVersion
                    };
                }
            }
            else
            {
                _model = new StatusEffectFormModel
                {
                    Type = StatusEffectType.Buff.ToString(),
                    AppliesTo = Role.All.ToString()
                };
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Save()
    {
        if (_form == null) return;
        await _form.Validate();
        if (!_isValid) return;

        _isSaving = true;
        try
        {
            if (_isNew)
            {
                var request = new CreateStatusEffectRequest(
                    _model.Name,
                    _model.Description,
                    _model.Type,
                    _model.AppliesTo,
                    _model.ImageUrl,
                    _model.GameVersion
                );

                await StatusEffectService.CreateAsync(request);
                Snackbar.Add("Status effect created successfully", Severity.Success);
            }
            else
            {
                var request = new UpdateStatusEffectRequest(
                    _model.Name,
                    _model.Description,
                    _model.Type,
                    _model.AppliesTo,
                    _model.ImageUrl,
                    _model.GameVersion
                );

                await StatusEffectService.UpdateAsync(Id!.Value, request);
                Snackbar.Add("Status effect updated successfully", Severity.Success);
            }

            Navigation.NavigateTo("/admin/status-effects");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private class StatusEffectFormModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public string Type { get; set; } = string.Empty;
        public string AppliesTo { get; set; } = string.Empty;
        public string? ImageUrl { get; set; }
        public string? GameVersion { get; set; }
    }
}
