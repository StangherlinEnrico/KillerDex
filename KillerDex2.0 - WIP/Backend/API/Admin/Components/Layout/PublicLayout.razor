@using API.Admin.Themes
@inherits LayoutComponentBase

<MudThemeProvider Theme="DbdTheme.Theme" @bind-IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    @DbdTheme.CssVariables

    html, body {
        margin: 0;
        padding: 0;
    }
</style>

<CascadingValue Value="this">
    <div style="@GetBackgroundStyle() min-height: 100vh; transition: background 0.3s ease;">
        @Body
    </div>
</CascadingValue>

@code {
    private bool _isDarkMode = true;

    public bool IsDarkMode
    {
        get => _isDarkMode;
        set
        {
            if (_isDarkMode != value)
            {
                _isDarkMode = value;
                StateHasChanged();
            }
        }
    }

    public void ToggleTheme()
    {
        IsDarkMode = !IsDarkMode;
    }

    private string GetBackgroundStyle()
    {
        return _isDarkMode
            ? DbdTheme.BackgroundGradient
            : $"background: linear-gradient(135deg, {DbdTheme.LightBackground} 0%, {DbdTheme.LightElevated} 100%);";
    }
}
