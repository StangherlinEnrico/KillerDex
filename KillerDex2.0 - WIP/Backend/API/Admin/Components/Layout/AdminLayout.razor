@using API.Admin.Themes
@inherits LayoutComponentBase

<MudThemeProvider Theme="DbdTheme.Theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    @DbdTheme.CssVariables
</style>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3" Style="@($"color: {DbdTheme.BloodRed};")">KillerDex</MudText>
        <MudText Typo="Typo.h5" Class="ml-1">Admin</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-4">@context.User.Identity?.Name</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/admin/logout">Logout</MudButton>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-4">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
